  <div class="container">
    <!-- Left Panel: Input Data -->
    <div class="left">
      <h2>Daily Input</h2>
      <input type="number" id="steps" placeholder="Steps walked">
      <input type="number" id="water" placeholder="Water intake (cups)">
      <input type="number" id="sleep" placeholder="Sleep hours">
      <button onclick="addEntry()">Add Entry</button>

      <div class="dashboard-card">
        <p>Total Steps: <span id="totalSteps">0</span></p>
        <p>Total Water: <span id="totalWater">0</span> cups</p>
        <p>Total Sleep: <span id="totalSleep">0</span> hours</p>
      </div>
